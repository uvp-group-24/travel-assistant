<Page x:Class="travel_assistant.Recommend.RecommendPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:travel_assistant.Recommend"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:travel_assistant.Model"
      xmlns:Map="using:Windows.UI.Xaml.Controls.Maps"
      mc:Ignorable="d"
      SizeChanged="Page_SizeChanged">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Phone">
                    <VisualState.Setters>
                        <Setter Target="appBar.(AppBar.ClosedDisplayMode)"
                                Value="Minimal" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="480" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Border x:Name="width" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <AppBar x:Name="appBar"
                    Grid.Row="0"
                    ClosedDisplayMode="Compact">
                <RelativePanel>
                    <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True"
                               Text="Recommend"
                               FontSize="36" />
                    <AutoSuggestBox RelativePanel.AlignRightWithPanel="True"
                                    Margin="0,8,0,0"
                                    Width="200"
                                    Height="36"
                                    QueryIcon="Find" />
                </RelativePanel>
            </AppBar>
            <Pivot Grid.Row="1">
                <PivotItem Header="Hot">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            Margin="0,0,0,8">
                                    <TextBlock Text="&#x2668;"
                                               FontFamily="Segoe UI Emoji"
                                               FontSize="36" />
                                    <TextBlock Text="Weekly"
                                               FontSize="36"/>
                                </StackPanel>
                                <Button BorderThickness="0"
                                        Padding="-1"
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="3"
                                        Grid.RowSpan="2">
                                    <Image Source="/Assets/Recommend/Hot/1.jpg"
                                           Stretch="Fill" />
                                </Button>
                                <Button BorderThickness="0"
                                        Padding="-1"
                                        Grid.Column="3"
                                        Grid.Row="3">
                                    <Image Source="/Assets/Recommend/Hot/2.jpg"
                                           Stretch="Fill" />
                                </Button>
                                <Button BorderThickness="0"
                                        Padding="-1"
                                        Grid.Column="3"
                                        Grid.Row="1">
                                    <Image Source="/Assets/Recommend/Hot/2.jpg"
                                           Stretch="Fill" />
                                </Button>
                                <Button BorderThickness="0"
                                        Padding="-1"
                                        Grid.Column="3"
                                        Grid.Row="2">
                                    <Image Source="/Assets/Recommend/Hot/2.jpg"
                                           Stretch="Fill" />
                                </Button>
                            </Grid>
                            <GridView ItemsSource="{x:Bind Hot_Delicacy_Items}"
                                      SelectionMode="Single">
                                <GridView.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    Grid.Column="0"
                                                    Grid.Row="0"
                                                    Margin="0,0,0,8">
                                            <TextBlock Text="&#x2615;"
                                                       FontFamily="Segoe UI Emoji"
                                                       FontSize="36" />
                                            <TextBlock Text="Delicacy"
                                                       FontSize="36" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.HeaderTemplate>
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="data:RecommendItem">
                                        <StackPanel Width="{Binding ElementName=width,Path=Width}">
                                            <Image Source="{x:Bind Image}"/>
                                            <TextBlock Text="{x:Bind Name}"
                                                       FontSize="16" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem Header="Delicacy">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <ComboBox Width="120"
                                      Margin="0,0,20,0">
                                <ComboBoxItem Content="hahaha" />
                            </ComboBox>
                            <ComboBox Width="120"
                                      Margin="0,0,20,0">
                                <ComboBoxItem Content="hahaha" />
                            </ComboBox>
                            <ComboBox Width="120">
                                <ComboBoxItem Content="hahaha" />
                            </ComboBox>
                        </StackPanel>
                        <Frame Name="ContentFrame" />
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="Hostel">
                    <TextBlock Text="flagged emails go here." />
                </PivotItem>
                <PivotItem Header="Entertainment">
                    <TextBlock Text="urgent emails go here." />
                </PivotItem>
                <PivotItem Header="Attraction">
                    <TextBlock Text="urgent emails go here." />
                </PivotItem>
                <PivotItem Header="Shopping">
                    <TextBlock Text="urgent emails go here." />
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>
